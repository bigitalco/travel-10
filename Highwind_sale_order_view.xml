<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="Highwind_sale_order_form_view" model="ir.ui.view">
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <!--<field name="package_description"/>-->
                    <field name="x_sales_channel"/>
                    <field name="general_origin"/>
                    <field name="general_destination"/>
                    <field name="plan_description"/>

                </field>
                <field name="payment_term_id" position="replace">
                    <field name="trm"/>
                </field>
                <!--<header>-->
                <!--<button name="get_grand_total" type="object" string="Totalizar" class="oe_highlight"/>-->
                <!--</header>-->

                <xpath expr="//page[2]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="/form/sheet/group[1]" position="before">
                    <group col="3">
                        <group>
                            <field name="include_flight"/>
                            <field name="include_lodging"/>
                            <field name="include_transfer"/>
                        </group>
                        <group>
                            <field name="include_tour"/>
                            <field name="include_cruise"/>
                            <field name="include_travel_insurance"/>
                        </group>
                        <group>
                            <field name="include_car_rental"/>
                            <field name="include_ticket"/>
                            <field name="include_plan"/>
                        </group>

                    </group>
                </xpath>
                <xpath expr="//page[1]" position="after">
                    <page name="Vuelos" string="Vuelo" attrs="{'invisible': [('include_flight', '=',False)]}">
                        <field name="flights" widget="one2many_list">
                            <tree>
                                <field name="sumary"/>
                                <field name="retail_price" sum="Total"/>
                                <field name="total_to_pay" sum="Total"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Hospedaje" attrs="{'invisible': [('include_lodging', '=',False)]}">
                        <field name="lodgings" widget="one2many_list">
                            <tree>
                                <field name="lodging_place"/>
                                <field name="retail_price" sum="Total"/>
                                <field name="total_to_pay" sum="Total"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Traslado" attrs="{'invisible': [('include_transfer', '=',False)]}">
                        <field name="transfers" widget="one2many_list">
                            <tree>
                                <field name="sumary"/>
                                <field name="retail_price" sum="Total"/>
                                <field name="total_to_pay" sum="Total"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Tour" attrs="{'invisible': [('include_tour', '=',False)]}">
                        <field name="tours" widget="one2many_list">
                            <tree>
                                <field name="notes"/>
                                <field name="retail_price" sum="Total"/>
                                <field name="total_to_pay" sum="Total"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Crucero" attrs="{'invisible': [('include_cruise', '=',False)]}">
                        <field name="cruises" widget="one2many_list">
                            <tree>
                                <field name="notes"/>
                                <field name="retail_price" sum=" Total" widget="monetary"/>
                                <field name="total_to_pay" sum="Total"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Tarjeta médica" attrs="{'invisible': [('include_travel_insurance', '=',False)]}">
                        <field name="travel_insurances" widget="one2many_list">
                            <tree>
                                <field name="notes"/>
                                <field name="retail_price" sum="Total"/>
                                <field name="total_to_pay" sum="Total"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Renta de autos" attrs="{'invisible': [('include_car_rental', '=',False)]}">
                        <field name="car_rentals" widget="one2many_list">
                            <tree>
                                <field name="notes"/>
                                <field name="retail_price" sum="Total"/>
                                <field name="total_to_pay" sum="Total"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Boleta" attrs="{'invisible': [('include_ticket', '=',False)]}">
                        <field name="tickets" widget="one2many_list">
                            <tree>
                                <field name="notes"/>
                                <field name="retail_price" sum="Total"/>
                                <field name="total_to_pay" sum="Total"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Plan" attrs="{'invisible': [('include_plan', '=',False)]}">
                        <field name="plans" widget="one2many_list">
                            <tree>
                                <field name="notes"/>
                                <field name="retail_price" sum="Total"/>
                                <field name="total_to_pay" sum="Total"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Información">
                        <div class="o_horizontal_separator">Pasajeros</div>
                        <field name="passengers" widget="one2many_list">
                            <tree editable="bottom">
                                <field name="id_number"/>
                                <field name="id_type"/>
                                <field name="name" string="Nombres                                   "/>
                                <field name="last_name" string="Apellidos                                   "/>
                                <field name="birth_date"/>
                                <field name="nationality"/>
                                <field name="passport_due_date"/>
                            </tree>
                        </field>
                        <!--ADICIONES-->
                        <group string="Adiciones">
                            <group>
                                <field name="include" widget="many2many_tags">
                                    <field name="detail"/>
                                </field>
                            </group>
                            <group>
                                <field name="exclude" widget="many2many_tags">
                                    <field name="detail"/>
                                </field>
                            </group>
                        </group>
                        <group col="4" string="Costos por tipo de pasajero">
                            <group>
                                <field name="sum_cost_per_adult_in_1"/>
                            </group>
                            <group>
                                <field name="sum_cost_per_adult_in_2"/>
                            </group>
                            <group>
                                <field name="sum_cost_per_adult_in_3"/>
                            </group>
                            <group>
                                <field name="sum_cost_per_adult_in_m"/>
                            </group>
                        </group>
                        <group col="4">
                            <group>
                                <field name="sum_cost_per_adult"/>
                            </group>
                            <group>
                                <field name="sum_cost_per_child"/>
                            </group>
                            <group>
                                <field name="sum_cost_per_infant"/>
                            </group>
                            <group>
                                <field name="manual_cost_tour_conductor"/>
                            </group>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//tree/field[@name='tax_id']" position="replace">
                    <field name='tax_id' invisible="True"/>
                </xpath>
                <xpath expr="//tree/field[@name='price_unit']" position="replace">
                    <field name='price_unit' invisible="True"/>
                </xpath>
                <xpath expr="//tree/field[@name='product_uom_qty']" position="replace">
                    <field name='product_uom_qty' invisible="True"/>
                </xpath>
                <field name="amount_tax" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="amount_untaxed" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>


            </field>
        </record>
    </data>
</odoo>
